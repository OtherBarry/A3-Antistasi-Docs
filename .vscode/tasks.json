{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate HTML",
            "command": "${workspaceFolder}/make.bat",
            "args": ["html"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}
